<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="@color/pinkbackbg"
    >

    <RelativeLayout
        android:id="@+id/image_profile"
        android:layout_width="125dp"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/iv_item_exprofile"
            android:src="@drawable/c"
            android:layout_width="125dp"
            android:layout_height="300dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <TextView
                android:id="@+id/tv_item_exconnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="帖子内容.."
                android:textSize="24sp"
                android:layout_below="@id/tv_item_extime"
                />

            <TextView
                android:id="@+id/tv_item_extime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023.04.12"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/tv_item_explace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-145dp"
                android:layout_toRightOf="@id/tv_item_extime"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="长沙市 红星国际广场"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_exprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="¥65起"
                android:textSize="30dp"
                android:textStyle="bold"/>



            <TextView
                android:id="@+id/tv_item_exstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2天后结束售卖"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_extitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="涂鸦展标题"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:textStyle="bold"

            />
    </RelativeLayout>
</LinearLayout>